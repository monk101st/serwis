doctype html
mixin item(title, url)
  li
    a(href=url class=path == url ? 'active' : '')=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    span Aktualnie jesteś: #{path}
    ul(class="ul-style")
      +item('Start', '/')
      +item('Aktualności', '/news')
      +item('Quiz', '/quiz')
      +item('Admin', '/admin')
    block content
